import os
import re
import time

def get_file_list(arg_target_dir, arg_file_prefix, arg_file_list):
    for root, dirs, files in os.walk(arg_target_dir):
        for file in files:
            if arg_file_prefix in file:
                #print '[F ] ', file
                arg_file_list.append(root + '/' + file)
    return sorted(arg_file_list)

